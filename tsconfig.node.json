{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "outDir": "dist-node"
  },
  "include": [
    "vite.config.ts",
    "api/**/*.ts",
    "api/**/*.cts"
  ]
}
