rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les campagnes
    match /campaigns/{campaignId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les statistiques de campagne
    match /campaign_stats/{statsId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les templates d'email
    match /email_templates/{templateId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles temporaires pour les tests (à supprimer en production)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}